{
  "name": "website-indexer",
  "version": "1.1.0",
  "license": "CC0-1.0",
  "engines": {
    "node": ">=16.x"
  },
  "scripts": {
    "build": "node ./esbuild.mjs",
    "clean": "rm -rf ./viewer/static/",
    "prettier": "yarn prettier:cmd --check",
    "prettier:cmd": "prettier 'viewer/static_src/**/*.{css,js}' 'viewer/**/*.html'",
    "prettier:fix": "yarn prettier:cmd --write",
    "watch": "yarn build --watch"
  },
  "devDependencies": {
    "@cfpb/cfpb-buttons": "^2.0.0",
    "@cfpb/cfpb-core": "^2.0.0",
    "@cfpb/cfpb-expandables": "^2.0.0",
    "@cfpb/cfpb-forms": "^2.0.0",
    "@cfpb/cfpb-grid": "^2.0.0",
    "@cfpb/cfpb-icons": "^2.0.0",
    "@cfpb/cfpb-layout": "^2.0.0",
    "@cfpb/cfpb-notifications": "^2.0.0",
    "@cfpb/cfpb-pagination": "^2.0.0",
    "@cfpb/cfpb-typography": "^2.0.0",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.23.0",
    "esbuild-plugin-copy": "^2.1.1",
    "less": "^4.2.0",
    "postcss": "^8.4.39",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1"
  },
  "prettier": {
    "bracketSameLine": true,
    "htmlWhitespaceSensitivity": "strict",
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "tabWidth": 4
        }
      }
    ]
  }
}
